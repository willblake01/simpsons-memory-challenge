{
  "name": "simpsons-memory-challenge",
  "version": "0.1.0",
  "private": false,
  "dependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^6.1.0",
    "node-sass": "^9.0.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router": "^6.15.0",
    "react-scripts": "1.1.1",
    "vanilla-tilt": "^1.7.0",
    "yarn-run-all": "^3.1.1"
  },
  "scripts": {
    "build-css": "node-sass src/ -o src/",
    "watch-css": "yarn build-css && node-sass src/ -o src/ --watch --recursive",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build-js": "react-scripts build",
    "build": "npm-run-all build-css build-js",
    "test": "jest App",
    "eject": "react-scripts eject",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --no-semi --single-quote --write",
      "git add"
    ]
  },
  "devDependencies": {
    "prettier": "^1.7.4"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
