{
  "name": "simpsons-memory-challenge",
  "version": "0.1.0",
  "homepage": "https://willblake01.github.io/simpsons-memory-challenge/",
  "private": false,
  "dependencies": {
    "@types/jest": "^29.5.4",
    "classnames": "^2.3.2",
    "gh-pages": "^6.0.0",
    "husky": "^0.14.3",
    "jest": "^29.6.4",
    "lint-staged": "^6.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-loader-spinner": "^5.3.4",
    "react-router-dom": "^6.15.0",
    "react-scripts": "^5.0.1",
    "sass": "^1.66.1",
    "sweetalert2": "^11.7.27",
    "typescript": "^5.1.6",
    "vanilla-tilt": "^1.7.0",
    "yarn-run-all": "^3.1.1"
  },
  "scripts": {
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "build-css": "sass src/",
    "watch-css": "yarn build-css && sass src/ --watch",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build-js": "react-scripts build",
    "build": "npm-run-all build-css build-js",
    "test": "jest src/__tests__/Lists/Lists.test.tsx --watchAll",
    "eject": "react-scripts eject",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --no-semi --single-quote --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.22.11",
    "@babel/preset-env": "^7.22.10",
    "@testing-library/react": "^14.0.0",
    "babel-jest": "^29.6.4",
    "prettier": "^1.7.4"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
